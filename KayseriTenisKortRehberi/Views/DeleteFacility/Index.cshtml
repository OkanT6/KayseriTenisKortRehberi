@model KayseriTenisKortRehberi.Models.ViewModels.FacilityViewModel

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Tesis Sil</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
        }

        .container {
            background: white;
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
            width: 100%;
            max-width: 600px;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255,255,255,0.2);
        }

        .header {
            text-align: center;
            margin-bottom: 30px;
        }

            .header h1 {
                color: #e74c3c;
                font-size: 28px;
                margin-bottom: 10px;
                font-weight: 600;
            }

            .header p {
                color: #666;
                font-size: 16px;
            }

        .warning-section {
            background: #fff3cd;
            border: 2px solid #ffeaa7;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 30px;
            text-align: center;
        }

            .warning-section .warning-icon {
                font-size: 48px;
                color: #f39c12;
                margin-bottom: 15px;
            }

            .warning-section h3 {
                color: #d35400;
                margin-bottom: 10px;
                font-size: 20px;
            }

            .warning-section p {
                color: #8b4513;
                line-height: 1.6;
            }

        .facility-info {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 30px;
            border-left: 4px solid #e74c3c;
        }

            .facility-info h3 {
                color: #333;
                margin-bottom: 15px;
                font-size: 18px;
            }

            .facility-info .info-item {
                margin-bottom: 12px;
                padding: 8px 0;
                border-bottom: 1px solid #eee;
            }

                .facility-info .info-item:last-child {
                    border-bottom: none;
                }

                .facility-info .info-item strong {
                    color: #333;
                    display: inline-block;
                    width: 120px;
                }

                .facility-info .info-item span {
                    color: #666;
                }

        .auth-section {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 30px;
            border-left: 4px solid #e74c3c;
        }

            .auth-section h3 {
                color: #333;
                margin-bottom: 15px;
                font-size: 18px;
            }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                display: block;
                margin-bottom: 8px;
                color: #333;
                font-weight: 500;
                font-size: 14px;
            }

        .required {
            color: #e74c3c;
        }

        .form-group input {
            width: 100%;
            padding: 12px;
            border: 2px solid #e1e8ed;
            border-radius: 8px;
            font-size: 14px;
            transition: all 0.3s ease;
            background: #f8f9fa;
        }

            .form-group input:focus {
                outline: none;
                border-color: #e74c3c;
                background: white;
                box-shadow: 0 0 0 3px rgba(231, 76, 60, 0.1);
            }

        .button-group {
            display: flex;
            gap: 15px;
            margin-top: 30px;
        }

        .delete-btn {
            flex: 1;
            padding: 15px;
            background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
            color: white;
            border: none;
            border-radius: 10px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .delete-btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(231, 76, 60, 0.3);
            }

            .delete-btn:active {
                transform: translateY(0);
            }

        .cancel-btn {
            flex: 1;
            padding: 15px;
            background: #6c757d;
            color: white;
            border: none;
            border-radius: 10px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            text-align: center;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .cancel-btn:hover {
                background: #5a6268;
                color: white;
                text-decoration: none;
                transform: translateY(-2px);
            }

        .back-btn {
            display: inline-block;
            padding: 12px 24px;
            background: #6c757d;
            color: white;
            text-decoration: none;
            border-radius: 8px;
            margin-bottom: 20px;
            transition: all 0.3s ease;
        }

            .back-btn:hover {
                background: #5a6268;
                color: white;
                text-decoration: none;
            }

        .alert {
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 20px;
        }

        .alert-success {
            background: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }

        .alert-danger {
            background: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }

        .confirmation-checkbox {
            background: #fff3cd;
            border: 2px solid #ffeaa7;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 20px;
        }

            .confirmation-checkbox input[type="checkbox"] {
                width: auto;
                margin-right: 10px;
                transform: scale(1.2);
            }

            .confirmation-checkbox label {
                color: #8b4513;
                font-weight: 500;
                cursor: pointer;
                display: flex;
                align-items: center;
            }

        {
            .button-group

        {
            flex-direction: column;
        }

        .facility-info .info-item strong {
            width: 100%;
            display: block;
            margin-bottom: 5px;
        }

        }
    </style>
</head>
<body>
    <div class="container">
        <a href="@Url.Action("Index", "Home")" class="back-btn">← Ana Sayfaya Dön</a>

        <div class="header">
            <h1>🗑️ Tesis Sil</h1>
            <p>Admin paneli - Tesis silme işlemi</p>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }

        <div class="warning-section">
            <div class="warning-icon">⚠️</div>
            <h3>DİKKAT!</h3>
            <p>Bu işlem geri alınamaz! Tesis tamamen silinecek ve tüm ilgili veriler kaybolacaktır.</p>
        </div>

        <div class="facility-info">
            <h3>📋 Silinecek Tesis Bilgileri</h3>
            <div class="info-item">
                <strong>Tesis ID:</strong>
                <span>@Model.Id</span>
            </div>
            <div class="info-item">
                <strong>Tesis Adı:</strong>
                <span>@Model.FacilityName</span>
            </div>
            <div class="info-item">
                <strong>Açıklama:</strong>
                <span>@Model.FacilityDescription</span>
            </div>
            <div class="info-item">
                <strong>Konum:</strong>
                <span>Enlem: @Model.Latitude, Boylam: @Model.Longitude</span>
            </div>
            @if (!string.IsNullOrEmpty(Model.PhotoUrl))
            {
                <div class="info-item">
                    <strong>Fotoğraf:</strong>
                    <span>Mevcut</span>
                </div>
            }
        </div>

        @using (Html.BeginForm("Delete", "DeleteFacility", FormMethod.Post))
        {
            @Html.Hidden("id", Model.Id)

            <div class="auth-section">
                <h3>🔐 Kimlik Doğrulama</h3>
                <div class="form-group">
                    <label for="apiKey">API Anahtarı <span class="required">*</span></label>
                    <input type="password" id="apiKey" name="apiKey" placeholder="Admin API anahtarınızı giriniz" required>
                </div>
                <div class="form-group">
                    <label for="userName">Kullanıcı Adı <span class="required">*</span></label>
                    <input type="text" id="userName" name="userName" placeholder="Admin kullanıcı adınız" required>
                </div>
                <div class="form-group">
                    <label for="password">Şifre <span class="required">*</span></label>
                    <input type="password" id="password" name="password" placeholder="Admin şifreniz" required>
                </div>
            </div>

            <div class="confirmation-checkbox">
                <label>
                    <input type="checkbox" id="confirmDelete" required>
                    Bu tesisi silmek istediğimi onaylıyorum ve bu işlemin geri alınamaz olduğunu anlıyorum.
                </label>
            </div>

            <div class="button-group">
                <button type="submit" class="delete-btn" id="deleteButton" disabled>
                    🗑️ Tesisi Sil
                </button>
                <a href="@Url.Action("Index", "Home")" class="cancel-btn">
                    ❌ İptal Et
                </a>
            </div>
        }
    </div>

    <script>
        // Onay checkbox'ı kontrol et
        document.getElementById('confirmDelete').addEventListener('change', function() {
            const deleteButton = document.getElementById('deleteButton');
            if (this.checked) {
                deleteButton.disabled = false;
                deleteButton.style.opacity = '1';
            } else {
                deleteButton.disabled = true;
                deleteButton.style.opacity = '0.6';
            }
        });

        // Form gönderimi sırasında son onay
        document.querySelector('form').addEventListener('submit', function(e) {
            const facilityName = '@Model.FacilityName';
            const confirmation = confirm(`"${facilityName}" tesisini silmek istediğinizden emin misiniz?\n\nBu işlem GERİ ALINAMAZ!`);

            if (!confirmation) {
                e.preventDefault();
            }
        });

        // İlk yüklemede buton durumunu ayarla
        document.addEventListener('DOMContentLoaded', function() {
            const deleteButton = document.getElementById('deleteButton');
            deleteButton.style.opacity = '0.6';
        });
    </script>
</body>
</html>